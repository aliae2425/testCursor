<Window x:Class="ChessWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jeu d'Échecs" Height="600" Width="800"
        Background="#2c2c2c">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Message d'état -->
        <TextBlock x:Name="StatusMessage"
                  Grid.Row="0"
                  Foreground="White"
                  FontSize="18"
                  Margin="20,10"
                  TextAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Plateau d'échecs -->
            <Border Grid.Column="0" 
                    BorderBrush="#4a4a4a" 
                    BorderThickness="2" 
                    Margin="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Coordonnées des colonnes -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30,0,0,5">
                        <TextBlock Text="a" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="b" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="c" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="d" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="e" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="f" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="g" Margin="20,0" Foreground="White"/>
                        <TextBlock Text="h" Margin="20,0" Foreground="White"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Coordonnées des lignes -->
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="8" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="7" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="6" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="5" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="4" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="3" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="2" Margin="0,20" Foreground="White"/>
                            <TextBlock Text="1" Margin="0,20" Foreground="White"/>
                        </StackPanel>

                        <!-- Plateau -->
                        <UniformGrid x:Name="ChessBoard" Grid.Column="1" Rows="8" Columns="8"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Panneau latéral -->
            <Grid Grid.Column="1" Margin="0,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tour actuel -->
                <TextBlock x:Name="TurnIndicator"
                          Text="Tour aux Blancs"
                          Foreground="White"
                          FontSize="24"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Contrôles -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <Button x:Name="AIButton"
                            Content="Jouer contre l'IA"
                            Click="ToggleAI_Click"
                            Background="#4a4a4a"
                            Foreground="White"
                            Padding="10,5"
                            Margin="0,0,0,20"/>

                    <TextBlock Text="Pièces capturées :"
                             Foreground="White"
                             FontSize="18"
                             Margin="0,0,0,10"/>
                    <WrapPanel x:Name="CapturedPieces"
                              Margin="10"/>
                </StackPanel>

                <!-- Historique des coups -->
                <Border Grid.Row="2"
                        BorderBrush="#4a4a4a"
                        BorderThickness="2">
                    <ScrollViewer>
                        <ListBox x:Name="MoveHistory"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Fenêtre de promotion -->
        <Grid x:Name="PromotionDialog" 
              Grid.RowSpan="2"
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="#2c2c2c"
                    BorderBrush="#4a4a4a"
                    BorderThickness="2"
                    Width="300"
                    Height="100"
                    CornerRadius="5">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <Button x:Name="PromoteToQueen" 
                            Content="♕" 
                            Click="PromotePiece_Click"
                            Width="60" 
                            Height="60"
                            Margin="5"
                            FontSize="36"/>
                    <Button x:Name="PromoteToRook" 
                            Content="♖" 
                            Click="PromotePiece_Click"
                            Width="60" 
                            Height="60"
                            Margin="5"
                            FontSize="36"/>
                    <Button x:Name="PromoteToBishop" 
                            Content="♗" 
                            Click="PromotePiece_Click"
                            Width="60" 
                            Height="60"
                            Margin="5"
                            FontSize="36"/>
                    <Button x:Name="PromoteToKnight" 
                            Content="♘" 
                            Click="PromotePiece_Click"
                            Width="60" 
                            Height="60"
                            Margin="5"
                            FontSize="36"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window> 